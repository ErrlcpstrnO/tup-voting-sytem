{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["src/type"]
  },
  "include": ["src/**/*", "ormconfig.ts"]
}
